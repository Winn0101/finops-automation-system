{
  "anomaly_detection": {
    "threshold_percentage": 25,
    "lookback_days": 30,
    "alert_threshold_usd": 10
  },
  "idle_resource_rules": {
    "ec2": {
      "cpu_threshold": 5,
      "observation_days": 7,
      "exclude_tags": ["Production", "Critical"]
    },
    "rds": {
      "connection_threshold": 1,
      "observation_days": 7,
      "exclude_tags": ["Production"]
    },
    "ebs": {
      "unattached_days": 7,
      "snapshot_before_delete": true
    },
    "elb": {
      "no_targets_days": 7,
      "request_count_threshold": 10
    },
    "elastic_ip": {
      "unassociated_days": 3
    }
  },
  "savings_opportunities": {
    "rightsizing_threshold": 30,
    "reserved_instance_recommendation": true,
    "savings_plan_recommendation": true
  }
}
